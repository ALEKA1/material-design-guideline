<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_padding_margin_xx"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding_margin_x"
            android:orientation="vertical"
            android:paddingEnd="@dimen/default_padding_margin_x"
            android:paddingStart="@dimen/default_padding_margin_x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_1"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H1" />

                <TextView
                    android:id="@+id/tv_headline_1_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_2"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H2" />

                <TextView
                    android:id="@+id/tv_headline_2_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_3"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H3" />

                <TextView
                    android:id="@+id/tv_headline_3_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_4"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H4" />

                <TextView
                    android:id="@+id/tv_headline_4_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_5"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H5" />

                <TextView
                    android:id="@+id/tv_headline_5_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headline_6"
                    style="@style/MaterialTextView.Roboto.BlackActive.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="H6" />

                <TextView
                    android:id="@+id/tv_headline_6_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subtitle_1"
                    style="@style/MaterialTextView.Roboto.BlackActive.SubTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Subtitle 1" />

                <TextView
                    android:id="@+id/tv_subtitle_1_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subtitle_2"
                    style="@style/MaterialTextView.Roboto.BlackActive.SubTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Subtitle 2" />

                <TextView
                    android:id="@+id/tv_subtitle_2_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_body_1"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Body 1" />

                <TextView
                    android:id="@+id/tv_body_1_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_body_2"
                    style="@style/MaterialTextView.Roboto.BlackActive.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Body 2" />

                <TextView
                    android:id="@+id/tv_body_2_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_button"
                    style="@style/MaterialTextView.Roboto.BlackActive.Button.AllCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Button" />

                <TextView
                    android:id="@+id/tv_button_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_caption"
                    style="@style/MaterialTextView.Roboto.BlackActive.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Caption" />

                <TextView
                    android:id="@+id/tv_caption_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_overline"
                    style="@style/MaterialTextView.Roboto.BlackActive.Overline.AllCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:text="Overline" />

                <TextView
                    android:id="@+id/tv_overline_size"
                    style="@style/MaterialTextView.Roboto.BlackInactive.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>