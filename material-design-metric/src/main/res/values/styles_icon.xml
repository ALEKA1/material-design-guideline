<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- ============================= Icon ==================================================== -->
    <style name="IconClick">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/md_icon_touch_size</item>
        <item name="android:layout_height">@dimen/md_icon_touch_size</item>
        <item name="android:padding">@dimen/md_icon_touch_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="IconClickSmall">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/md_icon_touch_size_small</item>
        <item name="android:layout_height">@dimen/md_icon_touch_size_small</item>
        <item name="android:padding">@dimen/md_icon_touch_padding_small</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="IconClick.BlackActive" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_active_light_theme</item>
    </style>

    <style name="IconClick.BlackInActive" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_inactive_light_theme</item>
    </style>

    <style name="IconClick.BlackDisabled" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_disabled_light_theme</item>
    </style>


    <style name="IconClick.BlackActive.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_active_light_theme</item>
    </style>

    <style name="IconClick.BlackInActive.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_inactive_light_theme</item>
    </style>

    <style name="IconClick.BlackDisabled.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_disabled_light_theme</item>
    </style>



    <style name="IconClick.WhiteActive" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_active_dark_theme</item>
    </style>

    <style name="IconClick.WhiteInActive" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_inactive_dark_theme</item>
    </style>

    <style name="IconClick.WhiteDisabled" parent="IconClick">
        <item name="android:tint">@color/md_icon_color_disabled_dark_theme</item>
    </style>


    <style name="IconClick.WhiteActive.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_active_dark_theme</item>
    </style>

    <style name="IconClick.WhiteInActive.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_inactive_dark_theme</item>
    </style>

    <style name="IconClick.WhiteDisabled.Small" parent="IconClickSmall">
        <item name="android:tint">@color/md_icon_color_disabled_dark_theme</item>
    </style>


</resources>